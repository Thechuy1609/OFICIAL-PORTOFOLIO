.bg-white
  %header.fixed.inset-x-0.top-0.z-50.border-b.border-gray-900.bg-white.shadow-md
    %nav{class: "flex items-center p-6 lg:-px-8 justify-center"}
      %div{class: "lg:flex lg:gap-x-12"}
        %a{href: "#aboutme", class: "text-3xl font-semibold text-gray-900 relative group"}
          About me
          %span{class: "absolute inset-x-0 bottom-0 h-[2px] bg-sky-500 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 ease-out"}
        %a{href: "#techstack", class: "text-3xl font-semibold text-gray-900 relative group"}
          Tech stack
          %span{class: "absolute inset-x-0 bottom-0 h-[2px] bg-sky-500 scale-x-0 group-hover:scale-x-100 transition-transform duration-500 ease-out"}
